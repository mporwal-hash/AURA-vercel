{
  "rewrites": [
    { "source": "/.well-known/apple-app-site-association", "destination": "/.well-known/apple-app-site-association.json" },
    { "source": "/r/:code", "destination": "/api/redirect.js?code=:code" }
  ],
  "headers": [
    {
      "source": "/.well-known/apple-app-site-association",
      "headers": [{ "key": "Content-Type", "value": "application/json" }]
    },
    {
      "source": "/.well-known/assetlinks.json",
      "headers": [{ "key": "Content-Type", "value": "application/json" }]
    }
  ]
}
